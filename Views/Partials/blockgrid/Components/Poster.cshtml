<div class="conference-container min-h-[70vh] flex justify-center items-center">
	<div class="container">

		@* Test Image *@

		<div>
			<img class="img-fluid lazyload"
				 data-srcset="@Url.GetSrcSetUrls(Model.Content.Image, 400, 290)"
